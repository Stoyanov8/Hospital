<Page x:Class="Hospital.App.Pages.Rooms"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Hospital.App.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="Rooms">

    <Grid >
        <ListView x:Name="listView" HorizontalAlignment="Left" Height="157" VerticalAlignment="Top" Width="300" SelectionChanged="listView_SelectionChanged" Margin="0,24,0,0">
            <ListView.View>
                <GridView >
                    <GridViewColumn Header="First Name" Width="90"/>
                    <GridViewColumn Header="Last Name" Width="90" />
                    <GridViewColumn Header="Gender" Width="60"/>
                    <GridViewColumn />
                </GridView>
            </ListView.View>
            <ScrollBar x:Name="scrollBar"  Width="21" RenderTransformOrigin="2.666,2.423" Height="73"/>
        </ListView>

        <Label x:Name="label" Content="My patints" HorizontalAlignment="Center" Margin="51,232,69,0" FontSize="16" VerticalAlignment="Top" Width="180" Height="32"/>
    </Grid>
</Page>
